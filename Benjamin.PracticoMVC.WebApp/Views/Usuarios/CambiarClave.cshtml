
@{
    ViewBag.Title = "CambiarClave";
}



<div class="col-md-6 offset-md-3">
    <span class="anchor" id="formChangePassword"></span>
    <hr class="mb-5">

    <!-- form card change password -->
    <div class="card card-outline-secondary">
        <div class="card-header">
            <h3 class="mb-0">Cambiar Clave</h3>
        </div>
        <div class="card-body">
            <form class="form" role="form" autocomplete="off">
                <div id="campoClaveAntigua"  class="form-group">
                    <label for="inputPasswordOld">Clave Actual</label>
                    <input type="password" class="form-control" id="inputPasswordOld" required="">
                </div>
                <div class="form-group">
                    <label for="inputPasswordNew">Nueva Clave</label>
                    <input type="password" class="form-control" id="inputPasswordNew" required="">
                    <span class="form-text small text-muted">
                        La clave debe tener 8-20 caracteres, y <em>no debe</em> tener espacios.
                    </span>
                </div>
                <div class="form-group">
                    <label for="inputPasswordNewVerify">Verificar Nueva Clave</label>
                    <input type="password" class="form-control" id="inputPasswordNewVerify" required="">
                    <span class="form-text small text-muted">
                       Para confirmar, ingresar la clave de nuevo.
                    </span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success btn-lg float-right">Guardar</button>
                </div>
            </form>
        </div>
    </div>
    <!-- /form card change password -->

</div>

<script src="~/Scripts/Custom/cambiarClave.js"></script>