

@{
    ViewBag.Title = "ABM Productos";
}

<link href="~/Content/datatables.min.css" rel="stylesheet" />

<h2>ABM de Productos</h2>

<br />
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" onclick="abrirModal(0)">Agregar</button>
<br />
<br />



@*DESDE EL SCRIPT SE GENERA UNA TABLA*@
<div id="tabla-usuarios"></div>



<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"> <!-- Agregar/Editar Producto --> </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>

                    <table style="width:90%;margin:auto;">
                        <tr>
                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Código:</label> </td>
                            <td style="width:60%;margin:auto;"> <input type="text" class="form-control limpiar" id="txtCodigo" readonly> </td>
                            <td style="width:10%;margin:auto;"> <label>  </label> </td>
                        </tr>

                        <tr>

                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Nombre:</label> </td>
                            <td style="width:60%;margin:auto;"> <input type="text" class="form-control limpiar" id="txtNombre"> </td>
                            <td style="width:10%;margin:auto;"> <label>  </label> </td>
                        </tr>

                        <tr>

                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Descripción:</label> </td>
                            <td style="width:60%;margin:auto;">  <textarea class="form-control limpiar" id="txtDescripcion" rows="3"></textarea> </td>
                            <td style="width:10%;margin:auto;"> <label>  </label> </td>
                        </tr>

                        <tr>

                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Marca:</label> </td>
                            <td style="width:60%;margin:auto;">
                                <select class="form-control limpiarCbo" id="cboMarcas">
                                </select>
                            </td>
                            <td style="width:10%;margin:auto;"> <label> <i class="fas fa-check"></i> </label> </td>
                        </tr>

                        <tr>

                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Precio: $</label> </td>
                            <td style="width:60%;margin:auto;"> <input type="text" class="form-control limpiar" id="txtPrecioUnitario"> </td>
                            <td style="width:10%;margin:auto;"> <label>  </label> </td>
                        </tr>

                        <tr>

                            <td style="width:30%;margin:auto;"> <label for="recipient-name" class="col-form-label">Estado:</label> </td>
                            <td style="width:60%;margin:auto;">
                                <label style="width:1rem;"></label>
                                <input type="checkbox" class="form-check-input" id="chkActivo">
                                <label class="form-check-label" for="exampleCheck1">Activo</label>
                            </td>
                            <td style="width:10%;margin:auto;"> <label> <i class="fas fa-check"></i> </label> </td>
                        </tr>


                    </table>

                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupFileAddon01">Imagen</span>
                        </div>

                        <div class="custom-file">
                            <input type="file" class="custom-file-input limpiarFileInput" id="imgProducto"  accept="image/*" lang="es">
                            <label id="casillaFileName" class="custom-file-label" for="customFileLang">Examinar...</label>
                        </div>
                    </div>


                </form>
            </div>
            <div class="modal-footer">
                <button id="btnCancelar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button id="btnAceptar" type="button" class="btn btn-primary" onclick="guardar()">Aceptar</button>
            </div>
        </div>
    </div>
</div>








<script src="~/Scripts/datatables.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/moment-with-locales.min.js"></script>

<script src="~/Scripts/Custom/productos.js"></script>
